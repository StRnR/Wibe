<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Activities.ChangePasswordActivity">

    <Button
        android:id="@+id/btn_back_change_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_header_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nexa_bold"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_edit_old_pass_change_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nexa_light"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:theme="@style/UserAuthenticationEditText"
        app:layout_constraintTop_toBottomOf="@+id/txt_header_change_pass" />

    <Button
        android:id="@+id/btn_show_old_pass_change_pass"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_visibility"
        app:layout_constraintBottom_toBottomOf="@id/txt_edit_old_pass_change_pass"
        app:layout_constraintEnd_toEndOf="@id/txt_edit_old_pass_change_pass"
        app:layout_constraintTop_toTopOf="@id/txt_edit_old_pass_change_pass" />

    <EditText
        android:id="@+id/txt_edit_new_pass_change_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nexa_light"
        android:hint="New Password"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:theme="@style/UserAuthenticationEditText"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_old_pass_change_pass" />

    <Button
        android:id="@+id/btn_show_new_pass_change_pass"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_visibility"
        app:layout_constraintBottom_toBottomOf="@id/txt_edit_new_pass_change_pass"
        app:layout_constraintEnd_toEndOf="@id/txt_edit_new_pass_change_pass"
        app:layout_constraintTop_toTopOf="@id/txt_edit_new_pass_change_pass" />

    <Button
        android:id="@+id/btn_confirm_change_pass"
        style="@style/Bold2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/gradient_blue"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_new_pass_change_pass" />

</androidx.constraintlayout.widget.ConstraintLayout>