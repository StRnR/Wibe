<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.MyProfileActivity">

    <Button
        android:id="@+id/btn_back_my_profile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_header_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nexa_bold"
        android:text="My Profile"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_edit_name_my_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_user"
        android:fontFamily="@font/nexa_light"
        android:hint="Name"
        android:inputType="textPersonName|textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:theme="@style/UserAuthenticationEditText"
        app:layout_constraintTop_toBottomOf="@+id/txt_header_my_profile" />

    <EditText
        android:id="@+id/txt_edit_email_my_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="11dp"
        android:fontFamily="@font/nexa_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:theme="@style/UserAuthenticationEditText"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_name_my_profile" />

    <EditText
        android:id="@+id/txt_edit_pass_my_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nexa_light"
        android:text="haha!psyche!"
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:theme="@style/SearchEditText"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_email_my_profile" />

    <Button
        android:id="@+id/btn_change_pass_my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:fontFamily="@font/nexa_light"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_edit_pass_my_profile"
        app:layout_constraintEnd_toEndOf="@id/txt_edit_pass_my_profile"
        app:layout_constraintTop_toTopOf="@+id/txt_edit_pass_my_profile" />

    <Button
        android:id="@+id/btn_signout"
        style="@style/Bold2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/gradient_blue"
        android:text="Sign Out"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_pass_my_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>