<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="128dp"
    android:layout_height="180dp"
    android:layout_marginEnd="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_browse_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="background"
        app:cardCornerRadius="13dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bg_browse_tile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/img_artwork_browse_tile"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/loadingmusic" />

            <TextView
                android:id="@+id/txt_title_browse_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_artwork_browse_tile"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nexa_bold"
                android:gravity="center"
                android:letterSpacing="0.11"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>