<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="UserAuthenticationEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/sorkhabi</item>
        <item name="colorControlActivated">@color/sorkhabi</item>
    </style>

    <style name="SearchEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/skyBlue</item>
        <item name="colorControlActivated">@color/skyBlue</item>
    </style>

    <style name="Bold1">
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Bold2">
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Regular1">
        <item name="android:fontFamily">@font/nexa_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Regular2">
        <item name="android:fontFamily">@font/nexa_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="navbar_inactive">
        <item name="fontFamily">@font/nexa_light</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navbar_active">
        <item name="fontFamily">@font/nexa_light</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/selected_navbar</item>
    </style>

</resources>
